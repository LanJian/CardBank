<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackhxs.cardbank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup='true'
        android:name='com.jackhxs.cardbank.App'
        android:icon="@drawable/cardbeam_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name=".TemplateGallery" >
        </activity>
        
        <activity android:name=".CardEditActivity" >
        </activity>
        
        <activity android:name=".SignupActivity" >
        </activity>

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="CardFlipView">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/com.jackhxs.cardbank" />
            </intent-filter>
        </activity>

        <service android:name="com.jackhxs.remote.RemoteService" >
        </service>
    </application>
</manifest>
