<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackhxs.cardbank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.jackhxs.cardbank.App"
        android:allowBackup="true"
        android:icon="@drawable/cardbeam_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".TemplateGallery" >
        </activity>
        <activity android:name=".CardEditActivity" >
        </activity>
        <activity android:name=".SignupActivity" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" >
                </action>

                <category android:name="android.intent.category.DEFAULT" >
                </category>
                <category android:name="android.intent.category.BROWSABLE" >
                </category>

                <data
                    android:host="cardbeam"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="CardFlipView"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/com.jackhxs.cardbank" />
            </intent-filter>
        </activity>
        <activity
            android:name="ReferToListView"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.jackhxs.remote.RemoteService" >
        </service>
    </application>

</manifest>